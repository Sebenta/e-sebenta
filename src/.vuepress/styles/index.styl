.card-dcn{
    display: flex;
    align-items: center;
    justify-content: center; 
    margin:50px 0px; 
    background:#f3f3f3aa; 
    padding: 30px; 
    border-radius:10px;
}
.dcn{
    display: flex;
    flex-direction: column;
    justify-content: center; 
    
    .hero {

        display: flex;
        justify-content: space-between;
        flex-wrap: wrap;
        margin:50px 0;

        img{
            max-width: 350px;
        }

        div{
            display: flex;
            flex-direction: column;
            align-items: center;
            justify-content: center;
            
            h1{
                line-height: 1.6;
                font-weight: bold;
                text-align: center;
                text-justify: inter-word;
                span{
                    display: block;
                }
            }
        }
    }
}
